<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_synthesize_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_synthesize_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="钟点保洁"
            android:textSize="24sp"/>

        <View
            android:id="@+id/v_synthesize_dialog_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:background="#e1e1e1"/>

        <LinearLayout
            android:id="@+id/ll_synthesize_dialog_contact"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_synthesize_dialog_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="联系人"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/hourCleanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:ems="10"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:hint="请输入联系人姓名"
                android:selectAllOnFocus="true"
                android:textSize="16sp">

                <requestFocus/>
            </EditText>
        </LinearLayout>

        <View
            android:id="@+id/v_synthesize_dialog_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"/>

        <LinearLayout
            android:id="@+id/ll_synthesize_dialog_tel"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_synthesize_dialog_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="电话"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/hourCleanTele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:digits="1234567890."
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:hint="请输入11位手机号"
                android:maxLength="11"
                android:selectAllOnFocus="true"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/v_synthesize_dialog_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"/>

        <LinearLayout
            android:id="@+id/ll_synthesize_dialog_addresss"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_synthesize_dialog_addresss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="服务地址"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/hourCleanAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:hint="具体到小区楼号房号"
                android:selectAllOnFocus="true"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/v_synthesize_dialog_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"/>

        <LinearLayout
            android:id="@+id/ll_synthesize_dialog_remark"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_synthesize_dialog_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="备注"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/hourCleanRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:hint="最多输入38字"
                android:selectAllOnFocus="true"
                android:textSize="16sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/hourCleanOk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_butten">

            <Button
                android:id="@+id/btn_synthesize_dialog_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:background="#94d24b"
                android:focusable="false"
                android:text="提交订单"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>